@model BGGAPI.Collection.Return


@using (Html.BeginForm("Town", "Home"))
{
    <button class="btn btn-default btn-lg left">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
    </button>
}
@using (Html.BeginForm("Guestbook", "Home"))
{
    <button class="btn btn-default btn-lg right">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
    </button>
}

@{
    ViewBag.Title = "Board Game Index";
}
<h2 class="center">@ViewBag.Title</h2>
@{

<div class="col-lg-12 col-md-12 col-sm-12">
    <div class=" row">
        <div class="row-height">
            @foreach (var item in Model.Items)
            {
                <div class="col-lg-3 col-md-3 col-sm-3">
                    <h3><b>@item.Name</b></h3>
                    <img src="@item.Thumbnail" data-holder-rendered="true" style=" height: 180px; width: 180px; display: block;" class="center col-bottom">
                    <br>
                    <br>
                </div>
            }
        </div>
     </div>
</div>
   
}